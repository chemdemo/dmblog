{{ include include/html-header }}
{{ include include/css-eidt }}

	<header>
		<div class="header-inner">
			<a href="/" title="回主页">
				<img src="/style/images/dm.jpg" class="home-avatar" alt="chemdemo" />
			</a>
		</div>
	</header>

	<div class="post-body">
		<section>
			<label for="post-title" class="block-label">文章标题：</label>
			<input class="input post-title" type="text" id="post-title" placeholder="post title" />
		</section>

		<section class="edit-btns">
			<div class="btn-group">
				<a class="i-btn" href="#">H2</a>
				<a class="i-btn" href="#">H3</a>
				<a class="i-btn" href="#">H4</a>
				<a class="i-btn" href="#">H5</a>
				<a class="i-btn" href="#">H6</a>
			</div>

			<button class="i-btn">IMG</button>
		</section>

		<section class="post-editor" id="post-editor">锄禾日当午，汗滴禾下土</section>

		<section class="tags-edit">
			<label for="post-tags" class="block-label">添加标签：</label>
			<input type="text" class="input post-tags" id="post-tags" placeholder="post tags" />
			<a href="javascript: void(0);" class="add-tags"><i class="icon-plus"></i>添加已有标签</a>

			<section class="shadow-box none tags-select">
				<div class="tags-select-title">
					选择已有标签
					<span class="icon-close close"></span>
				</div>
				<div class="tags-list">
					<a href="" class="tag">生活</a>
					<a href="" class="tag">艺术</a>
					<a href="" class="tag">随感</a>
					<a href="" class="tag">技术</a>
					<a href="" class="tag">人生</a>
					<a href="" class="tag">nodejs</a>
					<a href="" class="tag">css</a>
					<a href="" class="tag">html</a>
				</div>
			</section>
		</section>

		<section>
			<label for="set-topped">文章置顶：</label>
			<input type="checkbox" id="set-topped" />
		</section>

		<section>
			<!-- <button class="button action btn-preview">预览</button> -->
			<button class="i-btn preview-ctrl">预览</button>
			<button class="i-btn i-btn-pink">预览</button>
			<!-- <button class="btn-blue btn-save">保存</button> -->
			<button class="i-btn i-btn-blue">保存</button>
		</section>
	</div>

	<div class="post-preview" id="post-preview">
		<div class="preview-ctrl">
			<span class="preview-ctrl-inner icon-play"></span>
		</div>
		<section class="md preview-box" id="preview-box">
		<!-- <iframe src="/preview.html" frameborder="no" borderWidth="0" width="100%" height="100%" name="preview"></iframe> -->
		</section>
	</div>

{{ include include/footer }}
{{ include include/js-edit }}
</html>